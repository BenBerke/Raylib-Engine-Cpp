{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Raylib",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "& { " +
                "$files = Get-ChildItem -Path src -Filter *.cpp -Recurse | ForEach-Object { $_.FullName }; " +
                "g++ $files -o game.exe -I include -I C:/Users/berke/raylib/include -L C:/Users/berke/raylib/lib -lraylib -lopengl32 -lgdi32 -lwinmm -std=c++17; " +
                "if ($?) { .\\game.exe }" +
                " }"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
