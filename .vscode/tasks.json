{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Raylib",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "g++ src/*.cpp main.cpp -I include -I C:/Users/berke/raylib/include -L C:/Users/berke/raylib/lib -lraylib -lopengl32 -lgdi32 -lwinmm -std=c++17 -o game.exe && game.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
